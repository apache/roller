<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class name="org.apache.roller.planet.pojos.SubscriptionEntry"
        table="rag_entry" lazy="true">

        <id name="id" column="id" type="java.lang.String">
            <generator class="assigned" />
        </id>

        <property
            name="handle"
            type="java.lang.String"
            update="true"
            insert="true"
            column="handle"
            unique="false"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            unique="false"
        />

        <property
            name="guid"
            type="java.lang.String"
            update="true"
            insert="true"
            column="guid"
            unique="true"
        />

        <property
            name="permalink"
            type="java.lang.String"
            update="true"
            insert="true"
            column="permalink"
            unique="false"
        />

        <property
            name="author"
            type="java.lang.String"
            update="true"
            insert="true"
            column="author"
            unique="false"
        />

        <property
            name="text"
            type="java.lang.String"
            update="true"
            insert="true"
            column="content"
            unique="false"
        />

        <property
            name="pubTime"
            type="java.sql.Timestamp"
            update="true"
            insert="true"
            column="published"
            unique="false"
        />

        <property
            name="updateTime"
            type="java.sql.Timestamp"
            update="true"
            insert="true"
            column="updated"
            unique="false"
        />

        <property
            name="categoriesString"
            type="java.lang.String"
            update="true"
            insert="true"
            column="categories"
            unique="false"
        />

        <many-to-one
            name="subscription"
            class="org.apache.roller.planet.pojos.Subscription"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="subscription_id"
            not-null="true"
        />

    </class>

</hibernate-mapping>
