<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class name="org.apache.roller.planet.pojos.Planet" 
            table="rag_planet" lazy="true">
        
        <id name="id" column="id" type="java.lang.String">
            <generator class="assigned" />
        </id>
        
        <property
            name="handle"
            type="java.lang.String"
            update="true"
            insert="true"
            column="handle"
            unique="true"
        />
        
        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            unique="false"
        />
        
        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="description"
            unique="false"
        />
        
        <set name="groups" lazy="true" inverse="true" cascade="all" sort="natural">
            <key column="planet_id" />
            <one-to-many class="org.apache.roller.planet.pojos.PlanetGroup" />
        </set>

    </class>
    
</hibernate-mapping>
