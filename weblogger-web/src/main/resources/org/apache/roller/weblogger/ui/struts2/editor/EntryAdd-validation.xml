<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    
    <field name="bean.title">
        <field-validator type="requiredstring">
            <message key="Entry.error.titleNull">unspecified key</message>
        </field-validator>
        
        <field-validator type="stringlength">
            <param name="maxLength">255</param>
            <message key="Entry.error.titleSize">unspecified key</message>
        </field-validator>
    </field>
    
    <field name="bean.locale">
        <field-validator type="requiredstring">
            <message key="Entry.error.localeNull">unspecified key</message>
        </field-validator>
    </field>
    
    <field name="bean.categoryId">
        <field-validator type="requiredstring">
            <message key="Entry.error.categoryNull">unspecified key</message>
        </field-validator>
    </field>
    
    <field name="bean.text">
        <field-validator type="requiredstring">
            <message key="Entry.error.textNull">unspecified key</message>
        </field-validator>
    </field>
    
</validators>
