                #if ($iPage.role == 'CUSTOM_EXTERNAL')
                    #if ($model.weblogPage && $iPage.Id == $model.weblogPage.Id)
                        <li class="rNavItem"><span>$iPage.name</span></li>
                    #else
                        <li class="rNavItem"><a href='$url.page($iPage.relativePath)'><span>$iPage.name</span></a></li>
                    #end
