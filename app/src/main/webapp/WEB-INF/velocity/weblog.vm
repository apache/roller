        <li class="rNavItem">
            <a href="$url.site"><span>$utils.msg("navigationBar.homePage")</span></a>
        </li>
        <li class="rNavItem">
            <a href="$url.home"><span>Weblog</span></a>
        </li>
        #if( $addExternalPages )
