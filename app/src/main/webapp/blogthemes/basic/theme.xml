<?xml version="1.0" encoding="UTF-8"?>
<sharedtheme>

    <id>basic</id>
    <name>Basic</name>
    <description>Offers wide margins for blogging programming language source code.</description>
    <author>TightBlog Weblogger</author>

    <!-- theme preview image -->
    <previewImagePath>basic-preview.png</previewImagePath>

    <!-- templates -->
    <template role="stylesheet">
        <name>basic-custom.css</name>
        <description>Stylesheet for Basic theme</description>
        <relativePath>basic-custom.css</relativePath>
        <contentsFile>basic-custom.css</contentsFile>
        <parser>thymeleaf</parser>
    </template>

    <template role="weblog">
        <name>Weblog</name>
        <contentsFile>weblog.html</contentsFile>
        <parser>thymeleaf</parser>
    </template>

    <template role="customInternal">
        <name>day</name>
        <contentsFile>day.html</contentsFile>
        <parser>thymeleaf</parser>
    </template>

    <template role="customInternal">
        <name>sidebar</name>
        <contentsFile>sidebar.html</contentsFile>
        <parser>thymeleaf</parser>
    </template>
</sharedtheme>
