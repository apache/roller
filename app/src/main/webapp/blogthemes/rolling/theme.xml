<?xml version="1.0" encoding="UTF-8"?>
<sharedtheme>

    <id>rolling</id>
    <name>Rolling</name>
    <description>Offers wide margins for blogging programming language source code.</description>

    <previewImagePath>rolling-sample.png</previewImagePath>

    <!-- templates -->
    <template role="stylesheet">
        <name>basic-custom.css</name>
        <description>Stylesheet for Basic theme</description>
        <relativePath>basic-custom.css</relativePath>
        <contentsFile>basic-custom.css</contentsFile>
    </template>

    <template role="weblog">
        <name>Weblog</name>
        <contentsFile>weblog.html</contentsFile>
    </template>

    <template role="customInternal">
        <name>day</name>
        <contentsFile>day.html</contentsFile>
    </template>

    <template role="customInternal">
        <name>sidebar</name>
        <contentsFile>sidebar.html</contentsFile>
    </template>

    <template role="stylesheet">
        <name>bigcalendar.css</name>
        <description>Stylesheet for Archives calendar</description>
        <relativePath>bigcalendar.css</relativePath>
        <contentsFile>bigcalendar.css</contentsFile>
    </template>

    <template role="customExternal">
        <name>Archives</name>
        <description>Calendar browser and links to latest entries</description>
        <relativePath>archives</relativePath>
        <contentsFile>archives.html</contentsFile>
    </template>

</sharedtheme>
