<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
  <persistence-unit name="TightBlogPU" transaction-type="RESOURCE_LOCAL">
    <!-- DB configuration done in tightblog-custom.properties (see Install guide)
         Avoiding DB configuration here to allow the same persistence.xml to be used between
         testing and prod (which have different DB configuration)
    -->
    <class>org.tightblog.pojos.MediaFile</class>
    <class>org.tightblog.pojos.MediaDirectory</class>
    <class>org.tightblog.pojos.User</class>
    <class>org.tightblog.pojos.UserCredentials</class>
    <class>org.tightblog.pojos.Weblog</class>
    <class>org.tightblog.pojos.WeblogBookmark</class>
    <class>org.tightblog.pojos.WeblogCategory</class>
    <class>org.tightblog.pojos.WeblogEntry</class>
    <class>org.tightblog.pojos.WeblogEntryComment</class>
    <class>org.tightblog.pojos.WeblogEntryTag</class>
    <class>org.tightblog.pojos.WeblogEntryTagAggregate</class>
    <class>org.tightblog.pojos.UserWeblogRole</class>
    <class>org.tightblog.pojos.WeblogTemplate</class>
    <class>org.tightblog.pojos.WebloggerProperties</class>
    <class>org.tightblog.util.InstantConverter</class>
  </persistence-unit>
</persistence>
