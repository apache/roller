                <span class="rNewsfeedLink">$utilities.truncateNicely($utilities.removeHTML($item.description),25,30,"...")</span>
            #end
            #if( $showDescription && $item.description )
                <span class="rNewsfeedDesc">$item.description</span>
            #end
        #end
    #end
