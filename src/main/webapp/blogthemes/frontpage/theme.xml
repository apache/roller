<?xml version="1.0" encoding="UTF-8"?>
<sharedtheme>

    <id>frontpage</id>
    <name>Frontpage</name>
    <description>Not a standard blog template; meant only as a front page accumulator of all blogs hosted by this
        server.
    </description>
    <siteWide>true</siteWide>

    <!-- theme preview image -->
    <previewImagePath>frontpage-sample.png</previewImagePath>

    <!-- templates -->
    <template role="weblog">
        <name>Weblog</name>
        <contentsFile>weblog.html</contentsFile>
    </template>

    <template role="customExternal">
        <name>directory</name>
        <description>weblog directory</description>
        <relativePath>directory</relativePath>
        <contentsFile>directory.html</contentsFile>
    </template>

    <template role="customInternal">
        <name>blogfrags</name>
        <contentsFile>blogfrags.html</contentsFile>
    </template>

    <template role="stylesheet">
        <name>_css</name>
        <contentsFile>_css.css</contentsFile>
        <relativePath>_css.css</relativePath>
    </template>

</sharedtheme>
