<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
        <!-- Pattern options: http://logging.apache.org/log4j/2.x/manual/layouts.html#PatternLayout -->
        <Console name="Console">
            <PatternLayout pattern="%d [%thread] %level{length=2} %logger{1.1.} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="org.tightblog" level="info"/>
        <Logger name="org.apache.tiles" level="error"/>
        <Logger name="org.springframework" level="warn"/>
        <Logger name="org.hibernate" level="info"/>
        <!-- Suppress annoying Derby JAR warnings when running embedded Tomcat
            https://stackoverflow.com/a/49198928/1207540
        -->
        <Logger name="org.apache.tomcat.util.scan.StandardJarScanner" level="error"/>
    </Loggers>
</Configuration>
